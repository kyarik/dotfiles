[core]
  editor = vim
  pager = less -+F -+X -c
[alias]
  a = add
  aa = add . -A
  ap = add -p
  st = status
  d = diff
  dc = diff --cached
  co = checkout
  cane = commit --amend --no-edit
  pf = push --force-with-lease
  pick = cherry-pick
  ra = rebase --abort
  rc = rebase --continue
  rb = rebase --origin
[push]
  default = simple
[pull]
  rebase = true
